<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:MovieRatingApp.Mobile.Controls"
             x:Class="MovieRatingApp.Mobile.Views.MovieView">

        <VerticalStackLayout>
            <StackLayout >
                <Image Source="{Binding ImageUrl}" Aspect="AspectFit" />
            </StackLayout>
            <VerticalStackLayout Padding="10">
                <Label Text="{Binding Title}" FontAttributes="Bold"/>
                <Label Text="{Binding Description}"/>
            <controls:RatingView Value="{Binding Rating, Mode=TwoWay}" Color="LightBlue"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
</ContentView>
